{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://app.storyblok.com/"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type_Options",
          "value": "nosniff"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' *.storyblok.com; script-src 'self' *.storyblok.com; img-src 'self' *.storyblok.com; style-src 'self' *.storyblok.com"
        }  
      ]
    }
  ]
}
